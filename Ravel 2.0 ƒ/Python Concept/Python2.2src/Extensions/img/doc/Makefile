# Customizations -- you *may* have to edit theseDOCDIR=		/ufs/sjoerd/src/python/Doc# Where are the various programs?LATEX=		latexBIBTEX=		bibtexEMACS=		emacsDVIPS=		dvips -fMAKEINDEX=	makeindexPYTHON=		pythonMAKEINFO=	makeinfoLATEX2HTML=	latex2htmlL2H=		TEXINPUTS=$(DOCDIR)/texinputs: $(LATEX2HTML) -init_file $(DOCDIR)/perl/l2hinit.perl#L2HARGS=	-address $$LOGNAME@`domainname` -local_iconsL2HARGS=	-address Sjoerd.Mullender@cwi.nl -local_icons# Install destination -- not used now but might be useful some time...DESTDIR=	/usr/localLIBDESTDIR=	$DESTDIR/libLIBDEST=	$LIBDESTDIR/pythonDOCDESTDIR=	$LIBDEST/doc# Ideally, you shouldn't need to edit beyond this point# Main targetlib.dvi:# Additional targetsl2h:	lib/index.html# Dependencieslib.dvi: boilerplate.tex copyright.texLIBFILES=lib.tex libimg.texlib.dvi: $(LIBFILES)	$(DOCDIR)/tools/newind.py > lib.ind	TEXINPUTS=:$(DOCDIR)/texinputs $(LATEX) lib	$(DOCDIR)/tools/fix_hack lib.idx	$(MAKEINDEX) -s $(DOCDIR)/texinputs/myindex.ist lib.idx	TEXINPUTS=:$(DOCDIR)/texinputs $(LATEX) lib	$(DVIPS) lib >lib.pslib/index.html:	lib.dvi	$(DOCDIR)/tools/fix_libaux.sed < lib.aux > lib1.aux	mv lib1.aux lib.aux	-if test -d lib; then rm -f lib/*.html; fi	$(L2H) $(L2HARGS) lib.tex	cd lib; case $(DOCDIR) in /*) $(DOCDIR)/tools/node2label.pl *.html;; *) ../$(DOCDIR)/tools/node2label.pl *.html;; esac# Housekeeping targets# Remove temporary filesclean:	rm -f @* *~ *.aux *.idx *.ilg *.ind *.log *.toc *.blg *.bbl *.pyc	rm -f *.bak *.orig	# Sources: .tex, .bib, .sty	# Useful results: .dvi, .ps, .texi, .info# Remove temporaries as well as final productsclobber: clean	 rm -f *.dvi *.ps *.texi *.info *.info-[0-9]*